---
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section class="text-center section-sm">
    <div class="container">
      <div class="justify-center row">
        <div class="sm:col-10 md:col-8 lg:col-6">
          <span
            class="text-[8rem] block font-bold text-dark"
          >
            404
          </span>
          <h1 class="mb-4 h2">Seite nicht gefunden</h1>
          <div class="content">
            <p>
              Die Seite ist leider nicht verfügbar.
            </p>
          </div>
          <a href="/" class="mt-8 btn btn-primary">Zurück zur Startseite</a>
        </div>
      </div>
    </div>
  </section>
</Base>
