---
import Button from "./Button.astro";
import image1 from "@/images/A7401035.jpg";
import image2 from "@/images/A7400758.jpg";
import image3 from "@/images/A7400784.jpg";
import image4 from "@/images/A7401006.jpg";
import image5 from "@/images/A7400741.jpg";
import { Image } from "astro:assets";

const services = [
  {
    title: "Gewerbeobjekte",
    description: "Praxen, Büros, Restaurants",
    image: image1,
  },
  {
    title: "Privatobjekte",
    description: "Treppen / Treppenhäuser, Fenster, Grundreinigung, Sanitär",
    image: image2,
  },
  {
    title: "Hotel / Ferienwohnung",
    description: "Wäscheservice Bettwäsche von privaten Ferienwohnungen",
    image: image3,
  },
  {
    title: "Bauendreinigung",
    description: "",
    image: image4,
  },
  {
    title: "Polster- und Teppichreinigungen",
    description: "",
    image: image5,
  },
];
---

<section class="py-32 bg-emerald-50">
  <div class="container">
    <div class="flex justify-between">
      <h2 class="text-5xl font-bold text-emerald-800">Was wir anbieten</h2>
      <Button />
    </div>
    <div class="grid grid-cols-3 gap-6 mt-8">
      {
        services.map((s) => (
          <div class="bg-white">
            <Image
              src={s.image}
              alt={s.title}
              width={418 * 2}
              class="object-cover object-top w-full h-auto aspect-square"
            />
            <div class="p-6">
              <h3 class="text-2xl font-bold text-emerald-800">{s.title}</h3>
              <p class="text-gray-600">{s.description}</p>
            </div>
          </div>
        ))
      }
      <div class="bg-white">
        <div class="p-6">
          <h3 class="text-2xl font-bold text-emerald-800">Weitere Gebiete</h3>
          <p class="text-gray-600">
            <ul class="pl-5 mt-4 text-lg text-gray-600 list-disc">
              <li>Praxen- und Therapieräume</li>
              <li>Büros</li>
              <li>Gastronomie</li>
              <li>Treppen / Treppenhäuser</li>
              <li>Fenster</li>
              <li>Grundreinigung</li>
              <li>Sanitär</li>
              <li>Wäscheservice Bettwäsche von privaten Ferienwohnungen</li>
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="w-full h-64 -mt-56 bg-emerald-900"></div>
