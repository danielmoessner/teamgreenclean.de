---
import { Image } from "astro:assets";
import image0 from "@/images/slider1.jpeg";
import image1 from "@/images/slider2.jpeg";
import image2 from "@/images/A7400845.jpg";
import image3 from "@/images/A7400957.jpg";
import image4 from "@/images/A7400979.jpg";
import image5 from "@/images/slider6.jpeg";
import type { ImageMetadata } from "astro";

const items: ImageMetadata[] = [image0, image1, image2, image3, image4, image5];
---

<section>
  <div
    class="hidden grid-cols-1 xl:grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6"
  >
    {
      items.map((img, index) => (
        <div class="flex flex-col w-full bg-primary">
          <Image src={img} alt="Stever Werner" class="w-full max-w-full" />
        </div>
      ))
    }
  </div>
</section>
